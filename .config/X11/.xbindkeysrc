# use it if you want to catch release events instead of press events

# By defaults, xbindkeys does not pay attention with the modifiers
# NumLock, CapsLock and ScrollLock.
# Uncomment the lines above if you want to pay attention to them.

#keystate_numlock = enable
#keystate_capslock = enable
#keystate_scrolllock= enable

"pamixer -i 5 && kill -36 $(pidof dwmblocks)"
    XF86AudioRaiseVolume

"pamixer -d 5 && kill -36 $(pidof dwmblocks)"
    XF86AudioLowerVolume

# Mute both default and active so that laptop LED updates
"pactl set-sink-mute @DEFAULT_SINK@ toggle && kill -36 $(pidof dwmblocks)"
    XF86AudioMute

# Mute both default and active so that laptop LED updates
"pactl set-source-mute @DEFAULT_SOURCE@ toggle"
    XF86AudioMicMute

"light -U 5"
    XF86MonBrightnessDown

"light -A 5"
    XF86MonBrightnessUp

"~/.local/bin/dmenuscripts/connectvpn"
    Mod4 + c

"playerctl -a play-pause"
    Control + XF86AudioMute

"playerctl -a stop"
    Control + XF86AudioLowerVolume

"playerctl -a previous"
    Control + XF86AudioRaiseVolume

"playerctl -a next"
    Control + XF86AudioMicMute

"scrot -sl mode=edge,opacity=10 -e 'xclip -sel c -t image/png -i $f && mv  $f /tmp && notify-send -i /usr/share/icons/Adwaita/48x48/devices/camera-photo-symbolic.symbolic.png \"Screensnip sent to clipboard!\"'"
    Mod4 + Shift + s

"scrot -oe 'xclip -sel c -t image/png -i $f && mv $f ~/screenshots && notify-send -i /usr/share/icons/Adwaita/48x48/devices/camera-photo-symbolic.symbolic.png \"Screenshot Taken!\" \"Saved as \\\"$f\\\"\"' $(dmenu -p 'Screenshot name: ' < /dev/null || date +%b%d_%T.png)"
    Mod4 + s

