!Colours------------------------------------------------------------------
#define _background #282828
#define _foreground #ebdbb2
#define _transparent #00000000
#define _semitransparent #F2282828
! Black + DarkGrey
#define _color0 #222222
#define _color8 #928374
! DarkRed + Red
#define _color1 #cc241d
#define _color9 #fb4934
! DarkGreen + Green
#define _color2 #98971a
#define _color10 #b8bb26
! DarkYellow + Yellow
#define _color3 #d79921
#define _color11 #fabd2f
! DarkBlue + Blue
#define _color4  #458588
#define _color12 #83a598
! DarkMagenta + Magenta
#define _color5  #b16286
#define _color13 #d3869b
! DarkCyan + Cyan
#define _color6 #689d6a
#define _color14 #8ec07c
!LightGrey + White
#define _color7  #ebdbb2
#define _color15 #dfdfdf

*.background: _background
*.foreground: _foreground
*.color0:  _color0 
*.color8:  _color8
*.color1:  _color1
*.color9:  _color9
*.color2:  _color2
*.color10: _color10
*.color3:  _color3
*.color11: _color11
*.color4:  _color4
*.color12: _color12
*.color5:  _color5
*.color13: _color13
*.color6:  _color6
*.color14: _color14
*.color7:  _color7
*.color15: _color15
*.semitransparent: _semitransparent
*.transparent: _transparent

!URxvt Settings ----------------------------------------------------------
URxvt.font:			xft:DinaR:size=9,xft:FontAwesome:pixelsize=14,xft:unifont:pixelsize=14
URxvt.scrollBar:		false
URxvt.depth:			32
!URxvt.background:		rgba:0000/0000/0000/D367	
URxvt.cursorBlink:		true
URxvt.scrollTtyKeypress:	true
URxvt.scrollTtyOutput:		false
URxvt.url-launcher:		/usr/bin/firefox
URxvt.visualBell:		true
URxvt.letterSpace:	        0

!Font Settings-------------------------------------------------------------
!Xft.dpi:			96
!Xft.antialias:			true
!Xft.hinting:			true
!Xft.hintstyle:			hintslight

!Rofi Settings-------------------------------------------------------------
rofi.lines:			5
rofi.width:			33%
rofi.scroll-method:		0
rofi.font:			Ubuntu 11

! State:            'bg',     'fg',     'bgalt',  'hlbg',   'hlfg'
rofi.color-normal:  _transparent,  _color15, _transparent,  _color8,  _color15
!rofi.color-urgent: #fdf6e3,  #dc322f,  #eee8d5,  #dc322f,  #fdf6e3
!rofi.color-active: #fdf6e3,  #268bd2,  #eee8d5,  #268bd2,  #fdf6e3

!                  'background', 'border', 'separator'
rofi.color-window: _semitransparent,      _color15, _foreground 

