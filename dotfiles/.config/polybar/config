[colors]
background = ${xrdb:color0:#222}
background-alt = ${xrdb:color8:#928374} 
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color15:#dfdfdf}
primary = ${xrdb:color12:#83a598}
secondary = ${xrdb:color10:#b8bb26}
alert = ${xrdb:color11:#fabd2f}
urgent = ${xrdb:color9:#fb934}

[bar/top]
monitor = "LVDS-1"
width = 100%
height = 22
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2 

padding-left = 0
padding-right = 2
module-margin-left = 2 
module-margin-right = 2

font-0 = Ubuntu:pixelsize=12;3
font-1 = FontAwesome:pixelsize=10;3
font-2 = Unifont:pixelsize=12;3

modules-left = i3 playerctl
#modules-center = playerctl
modules-right = vpn bluetooth eth wlan filesystem memory cpu temperature battery date

[module/i3]
type = internal/i3
format = <label-state><label-mode>
#strip-wsnumbers = true
index-sort = true
wrapping-scroll = true

label-mode = %mode%
label-mode-padding = 3 
;label-mode-foreground = ${colors.foreground} 
label-mode-background = ${colors.background}

; focused = Active workspace on focused monitor
label-focused = %name%
;label-focused-foreground = ${colors.foreground}
;label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.foreground}
label-focused-padding = 3

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 3

; visible = Active workspace on unfocused monitor
;label-visible = %index%
;label-visible-background = ${self.label-focused-background}
;label-visible-underline = ${self.label-focused-underline}
;label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.urgent}
label-urgent-padding = 3

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /home
label-mounted =  %free%

[module/cpu]
type = internal/cpu
interval = 2
label = " %percentage:2%%"

[module/memory]
type = internal/memory
interval = 2
label = " %percentage_used:2%%"

[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0
format-connected =<label-connected>
label-connected = " %essid%"
format-disconnected = 

[module/eth]
type = internal/network
interface = eth0
interval = 3.0
label-connected = " %local_ip%"
format-disconnected =

[module/date]
type = internal/date
interval = 5

date = %a %b %e
time = %I:%M %p
format-prefix = "|   "   
format-prefix-foreground = ${colors.background-alt}
#format-underline = #0a6cf5
label = %date% %time%
#label =%time%
format = <label>

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1
poll-interval = 5

format-charging = <animation-charging> <label-charging>
label-battery = %percentage:2%% 
format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage:4%%
format-full = <ramp-capacity> <label-full>
label-full = %percentage:2%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
interval = 1
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input
warn-temperature = 95 

format = <ramp> <label>
label = %temperature:2%

ramp-0 =   
ramp-1 =  
ramp-2 =  

[module/playerctl]
type = custom/script
exec = echo "   "$(playerctl metadata artist) - $(playerctl metadata title)" " 
exec-if = playerctl metadata 
tail = false
interval = 5  		      
format-prefix = "|    " 
format-prefix-foreground = ${colors.background-alt}
format = <label>
format-underline =${colors.foreground}
format-prefix-underline = ${colors.background}
label = %output:0:75:...%

[module/vpn]
type = custom/script
exec = if [ -h /sys/class/net/tun0 ]; then echo ""; else echo ""; fi
interval = 3
label = %output%
tail = false

[module/bluetooth]
type = custom/script
exec = if hcitool conn | grep -E '<|>' &> /dev/null; then echo ""; else echo ""; fi
interval = 3
label = %output%
tail = false

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5
