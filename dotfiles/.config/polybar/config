[colors]
background = ${xrdb:semitransparent:#222}
background-alt = ${xrdb:color8:#928374} 
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color15:#dfdfdf}
primary = ${xrdb:color12:#83a598}
secondary = ${xrdb:color10:#b8bb26}
alert = ${xrdb:color11:#fabd2f}
urgent = ${xrdb:color9:#fb934}
transparent = ${xrdb:transparent}

[bar/top]
monitor = "LVDS-1"
width = 100%
height = 22

background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2 
padding-left = 2 
padding-right = 2 
module-margin-left = 2 
module-margin-right = 2
;radius-bottom = 2.5

bar-margins-left-right = 0
border-color = ${colors.transparent}
border-left-size = ${self.bar-margins-left-right}
border-right-size = ${self.bar-margins-left-right}

font-0 = Ubuntu:pixelsize=12;3
font-1 = FontAwesome:pixelsize=10;3
font-2 = Unifont:pixelsize=12;3

modules-left = i3 playerctl
modules-right = vpn bluetooth eth wlan filesystem memory cpu temperature battery date

[module/i3]
type = internal/i3
format = <label-state><label-mode>
index-sort = true
wrapping-scroll = true

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-underline = ${colors.foreground}
label-focused-padding = 5

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = ${self.label-focused-padding} 

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-underline = ${colors.background-alt}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.urgent}
label-urgent-padding = ${self.label-focused-padding}

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /home
label-mounted =  %free%

[module/cpu]
type = internal/cpu
interval = 2
label = " %percentage:2%%"

[module/memory]
type = internal/memory
interval = 2
label = " %percentage_used:2%%"

[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0
format-connected =<label-connected>
label-connected = " %essid%"
format-disconnected = 

[module/eth]
type = internal/network
interface = eth0
interval = 3.0
label-connected = " %local_ip%"
format-disconnected =

[module/date]
type = internal/date
interval = 5

date = %a %b %e
time = %I:%M %p
format-prefix = "|   "   
format-prefix-foreground = ${colors.background-alt}
#format-underline = #0a6cf5
label = %date% %time%
#label =%time%
format = <label>

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1
poll-interval = 5

format-charging = <animation-charging> <label-charging>
label-battery = %percentage:2%% 
format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage:4%%
format-full = <ramp-capacity> <label-full>
label-full = %percentage:2%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
interval = 1
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input
warn-temperature = 95 

format = <ramp> <label>
label = %temperature:2%

ramp-0 =   
ramp-1 =  
ramp-2 =  

[module/playerctl]
type = custom/script
exec = if [ -n "$(playerctl metadata title)" ]; then echo "   "$(playerctl metadata artist) - $(playerctl metadata title)" "; fi
exec-if = playerctl metadata 
tail = false
interval = 5  		      
format-prefix = "|    " 
format-prefix-foreground = ${colors.background-alt}
format = <label>
format-underline =${colors.foreground}
format-prefix-underline = ${colors.background}
label = %output:0:75:...%

[module/vpn]
type = custom/script
exec = if [ -h /sys/class/net/tun0 ]; then echo ""; else echo ""; fi
interval = 3
label = %output%
tail = false

[module/bluetooth]
type = custom/script
exec = if hcitool conn | grep -E '<|>' &> /dev/null; then echo ""; else echo ""; fi
interval = 3
label = %output%
tail = false

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

