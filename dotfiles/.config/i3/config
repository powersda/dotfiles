 # Rice--------------------------------------------------------------------

set $primaryFont Ubuntu 11
font pango:$primaryFont

set_from_resource $transparent i3wm.transparent
set_from_resource $brightwhite i3wm.color15 
set_from_resource $white       i3wm.color7 
set_from_resource $grey        i3wm.color8 
set_from_resource $dark        i3wm.color0 
set_from_resource $alert       i3wm.color2 

# window colors         Border       Background Text         Indicator    Child_Border
client.focused          $brightwhite $dark      $brightwhite $brightwhite $brightwhite
client.unfocused        $grey        $dark      $brightwhite $grey        $grey
client.urgent           $alert       $dark      $brightwhite $alert       $alert
client.placeholder      $dark        $dark      $dark        $dark        $dark
client.background 	$dark

# i3-gaps
for_window [class="^.*"] border pixel 2
smart_borders on
#smart_gaps on
gaps inner 10
gaps outer 0

# Workspace Management-----------------------------------------------------

set $workspace1 1
set $workspace2 2
set $workspace3 3
set $workspace4 4
set $workspace5 5
set $workspace6 6
set $workspace7 7
set $workspace8 8
set $workspace9 9
set $workspace10 10


force_display_urgency_hint 0 ms

# Workspace Assignment

workspace $workspace1 output LVDS-1
workspace $workspace2 output LVDS-1
workspace $workspace3 output LVDS-1
workspace $workspace4 output LVDS-1
workspace $workspace5 output LVDS-1
workspace $workspace6 output VGA-1
workspace $workspace7 output VGA-1
workspace $workspace8 output VGA-1
workspace $workspace9 output VGA-1
workspace $workspace0 output VGA-1

#assign [class="^URxvt$"] $workspace1
#assign [class="^Firefox$"] $workspace2
#assign [class="^Spotify$"] $workspace3
#assign [class="^discord$"] $workspace5
#assign [class="^Thunderbird$"] $workspace4
#assign [class="^VBoxSDL"] $workspace10
#assign [class="^.*"] $workspace6

# Automatic Startup

for_window [class="^URxvt$" title="^Scratchpad"] move scratchpad; scratchpad hide

exec_always --no-startup-id compton -b
#exec_always --no-startup-id feh --no-fehbg --bg-fill /home/pwrhs/Backgrounds/Current/* 
exec_always --no-startup-id wal -R

exec --no-startup-id polybar -r top
exec --no-startup-id "urxvt -name Scratchpad"  
#exec --no-startup-id firefox; 
#exec --no-startup-id spotify;
#exec --no-startup-id thunderbird;

#for_window [class="^.*"] focus
for_window [instance="Msgcompose"] floating enable

# Keybinds----------------------------------------------------------------
set $mod Mod4
set $left h
set $down j
set $up k
set $right l

# i3 Management
bindsym $mod+d exec --no-startup-id rofi -show run
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec i3-msg exit

# Autostart
bindsym $mod+c exec --no-startup-id "/home/pwrhs/Scripts/ConnectVPN.sh CA-Toronto" 
bindsym $mod+m exec --no-startup-id "VBoxSDL --startvm Kali" 

# Scratchpad
bindsym $mod+grave scratchpad show
bindsym $mod+Shift+grave move scratchpad

# Laptop Buttons
bindsym XF86AudioRaiseVolume exec "pactl set-sink-volume 0 +5%"
bindsym XF86AudioLowerVolume exec "pactl set-sink-volume 0 -5%"
bindsym XF86AudioMute exec "pactl set-sink-mute 0 toggle"
bindsym XF86AudioMicMute exec "pactl set-source-mute 1 toggle"
bindsym XF86AudioNext exec "playerctl next"
bindsym XF86AudioPrev exec "playerctl previous"
bindsym XF86AudioPlay exec "playerctl play-pause"
bindsym XF86AudioStop exec "playerctl stop"

# Tile Management
floating_modifier $mod
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Shift+q kill

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+a focus parent
#bindsym $mod+d focus child
bindsym $mod+b split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Workspace Movement
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace $workspace6
bindsym $mod+7 workspace $workspace7
bindsym $mod+8 workspace $workspace8
bindsym $mod+9 workspace $workspace9
bindsym $mod+0 workspace $workspace10
bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace10

#Resize
bindsym $mod+Ctrl+h resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+j resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+k resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+l resize grow width 10 px or 10 ppt
bindsym $mod+Ctrl+u gaps inner current minus 5
bindsym $mod+Ctrl+i gaps inner current plus 5
bindsym $mod+Ctrl+y gaps outer current minus 5
bindsym $mod+Ctrl+o gaps outer current plus 5
