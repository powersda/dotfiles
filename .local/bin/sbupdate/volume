#!/bin/sh

# Prints the current volume or üîá if muted.

[[ "$(wpctl get-volume @DEFAULT_SOURCE@)" == *"MUTED"* ]] && mic="ÔÑ± "

[[ "$(wpctl get-volume @DEFAULT_SINK@)" == *"MUTED"* ]] && echo "$mic"Ô±ù Mute && exit

#vol="$(pulsemixer --get-volume | awk '{ print $1 }'
while [ -z "$vol" ]; do
    vol="$(wpctl get-volume @DEFAULT_SINK@ | sed -e "s/[^0-9]//g;s/^00\?//g")"
done

if [ "$vol" -gt "70" ]; then
	icon="Ô©Ω"
elif [ "$vol" -lt "30" ]; then
	icon="Ô©æ"
else
	icon="Ô©ø"
fi


echo "$mic""$icon" "$vol"%
