	down) netwrk="ïª© No connection" ;;
	up) netwrk="$(awk '/^\s*w/ { print "ï‡«", int($3 * 100 / 70) "%" }' /proc/net/wireless) - $(iw dev wlan0 link | awk '/SSID/{print $2}')" ;;
